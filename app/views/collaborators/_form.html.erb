<!-- showing and adding collaborators -->
<!-- only if authorized- private wiki, user's or admin  -->

<h4>Add a collaborator</h4>
<%= form_for [@wiki, Collaborator.new] do |f| %>
  <div class= "form-group">
    <%= f.select :user_id, options_for_select(@available_users.collect{|user| [user.email,user.id]}) %>
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
