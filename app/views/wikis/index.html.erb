<h1>Wikis</h1>


<div class="col-md-8">
  <% @wikis.each do |wiki| %>
    <% if !(current_user.standard? && wiki.private?) %>
      <div class="media">
        <div class="media-body"
          <h4 class="media-heading">
            <% if wiki.private? %>
              <p>[private] <%=  link_to wiki.title, wiki %></p>
            <% else %>
                <p><%=  link_to wiki.title, wiki %></p>
            <% end %>
          </h4>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


<div class="col-md-4">
  <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
</div>
